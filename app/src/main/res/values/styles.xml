<resources>

    <style name="ToolbarTextAppearance">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="DatepickerDialogAppearance">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="PlantCardViewAppearance" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="PlantInnerCardViewAppearance" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="PlantNameTextViewAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/offWhite</item>
    </style>

    <style name="PlantSpeciesTextViewAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/offWhite</item>
    </style>

    <style name="PlantBirthdayTextViewAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/offWhite</item>
    </style>

</resources>